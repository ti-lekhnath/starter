<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_school_group_timing_tree" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="res_model">school.group</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_school_group_tree"/>
        <field name="target">new</field>
    </record>

    <record id="action_school_teacher_timing_kanban" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_school_teacher_kanban"/>
        <field name="target">new</field>
    </record>

    <record id="view_school_timing_form" model="ir.ui.view">
        <field name="name">school.timing.form</field>
        <field name="model">school.timing</field>
        <field name="arch" type="xml">
            <form string="Timing Form">
                <header>
                    <button type="action"
                            name="%(action_school_group_timing_tree)d"
                            string="Groups"/>

                    <button type="action"
                            name="%(action_school_teacher_timing_kanban)d"
                            string="Teachers"/>
                </header>
                <sheet>
                    <group>
                        <field name="group"/>
                        <field name="teacher"/>
                        <field name="start_time" widget="float_time"/>
                        <field name="end_time" widget="float_time"/>
                        <field name="days" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
