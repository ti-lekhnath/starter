<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student Form">
                <group col="2" class="oe_inline">
                    <group string="" col="1">
                        <field class="oe_avatar" string="" name="profile" widget="image" style="height: 50%;"/>
                        <group string="Student information" col="4">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="score"/>

                            <field name="dob"/>
                            <field name="gender"/>
                            <field name="age"/>
                        </group>
                        <group string="Academic information" col="4">
                            <field name="score"/>
                            <field name="group"/>
                            <field name="roll_number"/>
                        </group>
                    </group>

                    <group>

                    <notebook>
                        <page string="User Information">
                    </page>
                </notebook>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
